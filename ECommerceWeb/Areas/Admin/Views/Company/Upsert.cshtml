@model Company


<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient mt-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id != 0 ? "Update" : "Create") Company</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            @* <input asp-for="Product.ImageUrl" hidden /> *@
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div asp-validation-summary="All"></div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                            <label asp-for="Name" class="ms-2">Company Name</label>

                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PhoneNumber" type="text" class="form-control border-0 shadow" />
                            <label asp-for="PhoneNumber" class="ms-2">Company Contact</label>

                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="State" type="text" class="form-control border-0 shadow" />
                            <label asp-for="State" class="ms-2">State</label>

                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="City" type="text" class="form-control border-0 shadow" />
                            <label asp-for="City" class="ms-2">City</label>

                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="StreetAddress" type="text" class="form-control border-0 shadow" />
                            <label asp-for="StreetAddress" class="ms-2">Full Address</label>

                            <span asp-validation-for="StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PostalCode" type="text" class="form-control border-0 shadow" />
                            <label asp-for="PostalCode" class="ms-2">Postal Code</label>

                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                        
                        <div class="row pt-2">

                            <div class="col-6 col-md-3">
                                @if (Model.Id == 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Edit</button>
                                }
                            </div>


                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border form-control">Back to List</a>
                            </div>

                            @* For checking AddScoped, AddSingleton and AddTransient functionalities uncomment below div *@

                            @* <div class="col-6 col-md-3">
                            Total Count of Products=@_unitodWork.Product.GetAll().Count()
                            </div> *@
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>





    @{
        <partial name="_ValidationScriptsPartial" />
    }

