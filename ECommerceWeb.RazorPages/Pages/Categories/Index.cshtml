@page
@model ECommerceWeb.RazorPages.Pages.Categories.IndexModel
@{
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary"><i class="bi bi-bookmark-plus"></i> Create New Category</a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.lstCat.OrderBy(x=>x.DisplayOrder))    
            {
                <tr>
                    <td>
                        @category.Name
                    </td>
                    <td>
                        @category.DisplayOrder
                    </td>
                    <td>
                        <a asp-page="/Categories/edit" asp-route-categoryId="@category.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>

                        <a asp-page="/Categories/delete"  asp-route-categoryId="@category.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3-fill"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

                    @* asp-page="Category/edit" we append the controller and action part in Razor pages and we use asp-page here *@
@* lstCat is defined in cshtml.cs page *@